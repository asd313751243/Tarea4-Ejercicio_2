@model List<int>
@{
}

<div class="float-left">
    <h1>Tabla Magica:</h1>
    <ul class="table">
        <table class="table table-bordered table-condensed">
            <thead>
                <tr>
                    <th scope="col">#</th>
                    @for (int i = 0; i < Model.Count - 2; i++)
                    {
                        <th scope="col"> + @Model[i]</th>
                    }
                </tr>
            </thead>
            <tbody>
                <tr>
                    @for (int i = 0; i < Model.Count - 2; i++)
                    {
                    <tr>
                        <th scope="row">@Model[i]</th>
                        @for (int j = 0; j < Model.Count - 2; j++)
                        {
                            <td>@(Model[i] + Model[j])</td>
                        }
                    </tr>
                }

                    </tr>
                </tbody>
            </table>
        </ul>
    </div>

<center>
    <div>
        <h4>El numero mayor es @Model[10]</h4>
        <h4>El numero menor es @Model[11]</h4>
    </div>
</center>
<a class="btn btn-primary" asp-controller="Home" asp-action="Index">Home</a>